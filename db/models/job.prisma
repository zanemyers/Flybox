enum JobType {
  SHOP_REEL
  FISH_TALES
  SITE_SCOUT
}

enum JobStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
  FAILED
}

model Job {
  id        String   @id @default(uuid())
  type      JobType
  status    JobStatus
  message   String?
  createdAt DateTime @default(now())

  fileA     Bytes? // Always the final file produced
  fileB     Bytes? // Any secondary file
}
