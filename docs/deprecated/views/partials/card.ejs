<% if (slim) { %>
<!-- Slim / Horizontal Card -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card border-dashed shadow-sm">
            <div class="card-body d-flex align-items-center justify-content-between">
                <!-- Left side: Icon + Text -->
                <div class="d-flex align-items-center">
                    <div class="me-3 display-5"><%= icon %></div>
                    <div>
                        <h5 class="card-title mb-1"><%= title %></h5>
                        <p class="card-text small mb-0"><%= description %></p>
                    </div>
                </div>
                <!-- Right side: Button -->
                <a href="<%= link %>" class="btn btn-outline-secondary">
                    <%= buttonText %>
                </a>
            </div>
        </div>
    </div>
</div>
<% } else { %>
<!-- Normal Card -->
<div class="col-md-6 mb-3">
    <div class="card h-100 shadow-sm">
        <div class="card-body">
            <div class="mb-3 display-1"><%= icon %></div>
            <h5 class="card-title"><%= title %></h5>
            <p class="card-text"><%= description %></p>
            <a href="<%= link %>" class="btn btn-primary"><%= buttonText %></a>
        </div>
    </div>
</div>
<% } %>
